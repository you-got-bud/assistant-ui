{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["**/*.*", "!.next", "!.turbo"],
      "outputs": ["dist", ".next/**", "!.next/cache/**", "generated/**"],
      "env": [
        "OPENAI_*",
        "ASSISTANT_*",
        "JWT_*",
        "ENTELLIGENCE_*",
        "NEXT_PUBLIC_*",
        "KV_*",
        "SENTRY_*",
        "REDIS_*"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["build", "lint", "test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
