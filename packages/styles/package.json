{
  "name": "@assistant-ui/styles",
  "version": "0.3.2",
  "description": "Styles for @assistant-ui/react for non-Tailwind users",
  "keywords": [
    "styles",
    "css",
    "assistant-ui",
    "react",
    "ui",
    "chat"
  ],
  "author": "AgentbaseAI Inc.",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": {
      "default": "./dist/styles/*"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "sideEffects": [
    "./dist/styles/*.css"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "sync-styles": "tsx scripts/sync-styles.ts",
    "sync-styles:dry-run": "tsx scripts/sync-styles.ts --dry-run"
  },
  "devDependencies": {
    "@assistant-ui/x-buildutils": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "postcss-prefix-selector": "^2.1.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "tw-shimmer": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://www.assistant-ui.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/assistant-ui/assistant-ui.git",
    "directory": "packages/styles"
  },
  "bugs": {
    "url": "https://github.com/assistant-ui/assistant-ui/issues"
  }
}
